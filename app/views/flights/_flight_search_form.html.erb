<%= form_with url: flights_path, method: :get do |form| %>
  <%= form.simple_fields_for :flights do |f| %>
    <div class="row">
    <div class="col-md-4"></div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.input :origin_id, as: :select, collection: airports, value_method: :id %>
        </div>
        <div class="form-group">
          <%= f.input :destination_id, as: :select, collection: airports, value_method: :id%>
        </div>
        <div class="form-group">
          <%= f.input :departure_date, as: :date, :order => [:day, :month, :year] %>
        </div>
        <div class="form-group">
          <%= f.input :passengers, collection: 1..10 %>
        </div>
        <div class="form-group">
          <div class="d-grid d-md-block">
            <%= f.submit 'Submit', class:"btn btn-primary submit-btn" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

