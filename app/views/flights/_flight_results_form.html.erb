<div class="row">
  <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="album py-5 bg-transparent">
        <div class="container-fluid flights">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% unless @search_results.nil? %>
              <% @search_results.each do |flight| %>
                <div class="col">
                  <div class="card shadow-sm">
                    <div class="card-body">
                      <div class="card-text">
                        <%= render "flights", flight: flight %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
